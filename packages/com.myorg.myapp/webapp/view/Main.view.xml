<mvc:View controllerName="com.myorg.myapp.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:webc="sap.ui.webc.main"
	xmlns:mvc="sap.ui.core.mvc">

	<Page title="{i18n>appTitle}">
		<content>
			<webc:List headerText="{i18n>listHeader}"
				items="{/Beers}">
				<webc:StandardListItem text="{name}"
					additionalText="{brewery/name}" />
			</webc:List>
		</content>
	</Page>

</mvc:View>